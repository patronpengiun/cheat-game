<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui">
  <g:VerticalPanel>
    <g:HorizontalPanel height="100px" ui:field="opponentArea"/>
    <g:HorizontalPanel height="100px" ui:field="middleArea"/>
    <g:HorizontalPanel height="100px">
      <g:HorizontalPanel ui:field="playerArea"/>
    </g:HorizontalPanel>
    <g:HorizontalPanel height="100px">
      <g:HorizontalPanel width="120" height="100px" ui:field="selectedArea"/>
      <g:Button ui:field="claimBtn" text="Finish selecting cards"/>
    </g:HorizontalPanel>
  </g:VerticalPanel>
</ui:UiBinder> 